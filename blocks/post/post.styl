.post {
    width: 800px;
    margin: 0px auto;

    &__title {
        font-weight: 400;
    }

    &__title-link {
        color: #333;
        font-size: 100%;
        text-decoration: none;

        transition: color 0.3s ease 0s;
    }

    &__title-link:hover {
        color: #538f5f;
    }

    &__body {
        line-height: 1.618rem;
    }
}
